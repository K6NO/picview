extends layout

block content
    .album-container
        ul#albums-list.albums-list
            each album in albums
                li.album-item
                    #album-details.album-details
                        .album-image
                            a(href=album.albumLink)
                                img.album-cover(src=album.albumCover)
                            h2.album-title #{album.albumName}
                        .album-download-container
                            a.album-download(href=album.albumDLfull)
                                i.fa.fa-download(aria-hidden='true')
                                |  download
