extends layout
block content
    .main.container.row
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Login
            form(method='post', action='#')
                div.form-group
                    label(for='email') Email
                    input#email.form-control(type='email', name='email')
                div.form-group
                    label(for='pw') Password
                    input#pw.form-control(type='password', name='pw')
                button#login-form-submit(type='submit', name='login-form-submit') Sign in