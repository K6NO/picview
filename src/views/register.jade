extends layout
block content
    .main.container.row
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Register
            form(method='post', action='/register')
                div.form-group
                    label(for='name') First Name:
                    input#name.form-control(type='text', placeholder='' name='name')
                div.form-group
                    label(for='email') Email:
                    input#email.form-control(type='email', placeholder='example.name@emailprovider.com' name='email')
                div.form-group
                    label(for='pw') Password:
                    input#pw.form-control(type='password' name='pw')
                div.form-group
                    label(for='pw2') Confirm Password:
                    input#pw2.form-control(type='password' name='pw2')
                button.btn.btn-primary(type='submit') Sign up